# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Backup API Keys for Enhanced Reliability
# Caption generation backup API key
BACKUP_CAPTION_API_KEY=your_backup_caption_api_key_here

# Dictionary lookup backup API key  
BACKUP_DICTIONARY_API_KEY=your_backup_dictionary_api_key_here

# Server Configuration
PORT=3000

# Unlimited Mode Configuration
# Set to 'true' to enable unlimited mode with enhanced fallbacks
# Set to 'false' to enable quota warnings and limits
UNLIMITED_MODE=true

# Aggressive Fallback Configuration
# Set to 'true' to prioritize fallback over API calls for quota management
AGGRESSIVE_FALLBACK=true
